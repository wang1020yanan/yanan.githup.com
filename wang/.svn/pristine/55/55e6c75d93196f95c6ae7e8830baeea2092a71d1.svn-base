<div class="alert " role="alert">
    <h2><i class="fa fa-edit"></i>
        文章：</h2>
</div>
<div class="col-md-12 alert   all-info" ng-repeat="info in infos" role="alert">
    <div>
        <a href="#/informalEssay/detail/{{info.id}}">
            <h2>{{info.title}}</h2>
        </a>
        <p style="color: #515151">{{info.abstract}}
            <a href="#/informalEssay/detail/{{info.id}}" >阅读全文...</a>
        </p>
        <p class="text-r">{{info.time}}</p>
    </div>
</div>
<div ng-click="add()" class="col-md-12 button button-block button-rounded button-large more">{{loading}}</div>
